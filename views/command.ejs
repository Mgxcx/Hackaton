    <title>Ticketac</title>
  </head>
  <body>
    <!-- NAVBAR -->
    <nav class="navbar navbar-light bg-light">
      <a class="navbar-brand" href="homepage">
        <img
          src="/images/train.png"
          width="30"
          height="30"
          class="d-inline-block align-top"
          alt=""
          loading="lazy"
        />
        Ticketac
      </a>
      <ul class="navbar-nav d-inline-block p-3">
        <li class="nav-item d-inline-block mr-4">
          <a class="nav-link text-danger" href="/">Connection</a>
        </li>
        <li class="nav-item d-inline-block">
          <a class="nav-link text-dark" href="last-trip">My last trips</a>
        </li>
      </ul>
    </nav>
    <div class="container mt-5 px-5">
      <div class="col-12 offset-2">
        <h3 class="text-left mb-4 custom">My tickets :</h3>
      </div>
      <table class="table table-borderless">
        <thead>
          <tr>
            <th class="col-md-auto bg-white font-weight-bold">N°</th>
            <th class="col-md-auto bg-white font-weight-bold">Journey</th>
            <th class="col-md-auto bg-white font-weight-bold">Date</th>
            <th class="col-md-auto bg-white font-weight-bold">
              Departure Time
            </th>
            <th class="col-md-auto bg-white font-weight-bold">Price</th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <th class="col-md-auto bg-white font-weight-bold">1</th>
            <td class="bg-white">Paris / Lille</td>
            <td class="bg-white">02/08/2019</td>
            <td class="bg-white">15pm</td>
            <td class="bg-white">93 €</td>
          </tr>
          <tr>
            <th class="col-md-auto bg-white font-weight-bold">2</th>
            <td class="bg-white mt-3">Paris / Marseille</td>
            <td class="bg-white mt-3">07/08/2019</td>
            <td class="bg-white mt-3">19pm</td>
            <td class="bg-white mt-3">103 €</td>
          </tr>
          <tr class="totalCmd">
            <th class="col-md-auto font-weight-bold">Total</th>
            <td class=""></td>
            <td class=""></td>
            <td class=""></td>
            <td class="">250 €</td>
          </tr>
        </tbody>
      </table>
    </div>

    <div class="confirm-btn offset-9">
      <!-- Button HTML (to Trigger Modal) -->
      <a href="#myModal" class="trigger-btn btn go" data-toggle="modal"
        >Confirm</a
      >
    </div>

    <!-- Modal HTML -->
    <div id="myModal" class="modal fade">
      <div class="modal-dialog modal-confirm">
        <div class="modal-content">
          <div class="modal-header">
            <div class="icon-box">
              <i class="fas fa-check"></i>
            </div>
            <h4 class="modal-title">Awesome!</h4>
          </div>
          <div class="modal-body">
            <p class="text-center">
              Your booking has been confirmed. Check your email for more
              details.
            </p>
          </div>
          <div class="modal-footer">
            <button class="btn btn-success btn-block" data-dismiss="modal">
                OK
              </button>
            </a>
          </div>
        </div>
      </div>
    </div>

    <footer class="mt-auto text-center font-italic">© La Capsule 2020</footer>

    <script
      src="https://code.jquery.com/jquery-3.2.1.slim.min.js"
      integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN"
      crossorigin="anonymous"
    ></script>
    <script
      src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js"
      integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q"
      crossorigin="anonymous"
    ></script>
    <script
      src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js"
      integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl"
      crossorigin="anonymous"
    ></script>
  </body>
</html>
